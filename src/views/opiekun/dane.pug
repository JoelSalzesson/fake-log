extends layout

append content
    main.mainContainer
        h1 Dane podstawowe
        h2 Dane osobowe

        article
            div.daneWiersz
                span.tytul Imię (imiona) nazwisko:
                span.wartosc #{userInfo.Imie} #{userInfo.Imie2} #{userInfo.Nazwisko}
            div.daneWiersz
                span.tytul Data i miejsce urodzenia:
                span.wartosc= data.dateAndBirthPlace
            div.daneWiersz
                span.tytul PESEL:
                span.wartosc= data.pesel
            div.daneWiersz
                span.tytul Płeć:
                span.wartosc= userInfo.UczenPlec === 1 ? "Mężczyzna" : "Kobieta"
            div.daneWiersz
                span.tytul Obywatelstwo polskie:
                span.wartosc= data.polishCitizenship
            div.daneWiersz
                span.tytul Nazwisko rodowe:
                span.wartosc= data.familyName
            div.daneWiersz
                span.tytul Imię matki i ojca:
                span.wartosc= data.parentsName
